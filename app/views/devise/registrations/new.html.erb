<div class="card">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'form-signin') do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Cadastre-se</h1>

    <%= f.label :email, class:'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>

    <%= f.label :password, class:'sr-only' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres no minimo)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>

    <%= f.label :password_confirmation, class:'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>

    <%= f.submit "Criar", class:'btn btn-lg btn-primary btn-block' %>
    <% end %>

    <%= render "devise/shared/links" %>
    <%= link_to "Criar conta com Google", '/users/auth/google_oauth2' %>
  </div>
</div>